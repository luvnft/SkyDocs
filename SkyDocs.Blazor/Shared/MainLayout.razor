@inherits LayoutComponentBase
@inject SkyDocsService SkyDocsService

<RadzenDialog />
<div class="page">
    @*<div class="sidebar">
            <NavMenu />
        </div>*@
    <CascadingValue Value="this">
        <div class="main">
            <div class="top-row px-4">
                @if (TotalShares > 0)
                {
                    @if (NewShares > 0)
                    {
                        <b><a href="/shares">New Shares (@NewShares)</a></b>
                    }
                    else
                    {
                        <a href="/shares">New Shares</a>
                    }
                }

                <a href="/about">SkyDocs</a>
            </div>

            <div class="content px-4" style="height:100vh;padding-top:-3.5rem">
                @Body
            </div>
        </div>
    </CascadingValue>
</div>

